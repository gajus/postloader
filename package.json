{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "babel": {
      "compileAsTests": [
        "test/helpers/**/*"
      ]
    },
    "files": [
      "test/postloader/**/*"
    ],
    "require": [
      "@babel/register"
    ]
  },
  "bin": "./dist/bin/index.js",
  "dependencies": {
    "es6-error": "^4.1.1",
    "lodash": "^4.17.15",
    "pluralize": "^8.0.0",
    "roarr": "^2.15.3",
    "slonik": "^22.4.11",
    "slonik-sql-tag-raw": "^1.0.2",
    "yargs": "^15.3.1"
  },
  "description": "A scaffolding tool for projects using DataLoader, Flow and PostgreSQL.",
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/plugin-transform-flow-strip-types": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@babel/register": "^7.10.1",
    "ava": "^3.9.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-macros": "^2.8.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.2.0",
    "eslint-config-canonical": "^20.0.6",
    "flow-bin": "^0.127.0",
    "flow-copy-source": "^2.0.9",
    "husky": "^4.2.5",
    "inline-loops.macro": "^1.2.2",
    "nyc": "^15.1.0",
    "semantic-release": "^17.0.8"
  },
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run lint && npm run build"
    }
  },
  "keywords": [
    "flowtype",
    "postgres"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/index.js",
  "name": "postloader",
  "nyc": {
    "all": true,
    "exclude": [
      "src/bin",
      "src/queries"
    ],
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "reporter": [
      "html",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "silent": true,
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/postloader"
  },
  "scripts": {
    "build": "rm -fr ./dist && NODE_ENV=production babel ./src --out-dir ./dist --copy-files --source-maps && flow-copy-source src dist",
    "dev": "NODE_ENV=development babel ./src --out-dir ./dist --copy-files --source-maps --watch",
    "lint": "eslint ./src && flow",
    "test": "NODE_ENV=test nyc ava --verbose --serial && nyc report"
  },
  "version": "1.0.0"
}
