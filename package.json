{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "bin": "./dist/bin/index.js",
  "dependencies": {
    "es6-error": "^4.1.1",
    "lodash": "^4.17.11",
    "pluralize": "^8.0.0",
    "roarr": "^2.13.2",
    "slonik": "^16.19.5",
    "yargs": "^13.2.4"
  },
  "description": "A scaffolding tool for projects using DataLoader, Flow and PostgreSQL.",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-transform-flow-strip-types": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "ava": "^1.4.1",
    "babel-plugin-istanbul": "^5.1.4",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-canonical": "^17.1.0",
    "flow-bin": "^0.99.0",
    "flow-copy-source": "^2.0.6",
    "husky": "^2.3.0",
    "nyc": "^14.1.1",
    "semantic-release": "^15.13.12"
  },
  "engines": {
    "node": ">=8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run lint && npm run build"
    }
  },
  "keywords": [
    "flowtype",
    "postgres"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/index.js",
  "name": "postloader",
  "nyc": {
    "all": true,
    "exclude": [
      "src/bin",
      "src/queries"
    ],
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "reporter": [
      "html",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "silent": true,
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/postloader"
  },
  "scripts": {
    "build": "rm -fr ./dist && NODE_ENV=production babel ./src --out-dir ./dist --copy-files --source-maps && flow-copy-source src dist",
    "dev": "NODE_ENV=development babel ./src --out-dir ./dist --copy-files --source-maps --watch",
    "lint": "eslint ./src && flow",
    "test": "NODE_ENV=test nyc ava --verbose --serial && nyc report"
  },
  "version": "1.0.0"
}
