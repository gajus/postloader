{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "files": [
      "test/**/*"
    ],
    "helpers": [
      "test/helpers/**/*"
    ],
    "require": [
      "@babel/register"
    ],
    "sources": [
      "src/**/*"
    ]
  },
  "bin": "./dist/bin/index.js",
  "dependencies": {
    "es6-error": "^4.1.1",
    "lodash": "^4.17.15",
    "pluralize": "^8.0.0",
    "roarr": "^2.14.4",
    "slonik": "^21.4.0",
    "yargs": "^14.2.0"
  },
  "description": "A scaffolding tool for projects using DataLoader, Flow and PostgreSQL.",
  "devDependencies": {
    "@babel/cli": "^7.7.0",
    "@babel/core": "^7.7.2",
    "@babel/node": "^7.7.0",
    "@babel/plugin-transform-flow-strip-types": "^7.6.3",
    "@babel/preset-env": "^7.7.1",
    "@babel/register": "^7.7.0",
    "ava": "^2.4.0",
    "babel-plugin-istanbul": "^5.2.0",
    "babel-plugin-macros": "^2.6.1",
    "coveralls": "^3.0.7",
    "eslint": "^6.6.0",
    "eslint-config-canonical": "^17.8.0",
    "flow-bin": "^0.111.3",
    "flow-copy-source": "^2.0.8",
    "husky": "^3.0.9",
    "inline-loops.macro": "^1.2.2",
    "nyc": "^14.1.1",
    "semantic-release": "^15.13.30"
  },
  "engines": {
    "node": ">=8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run lint && npm run build"
    }
  },
  "keywords": [
    "flowtype",
    "postgres"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/index.js",
  "name": "postloader",
  "nyc": {
    "all": true,
    "exclude": [
      "src/bin",
      "src/queries"
    ],
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "reporter": [
      "html",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "silent": true,
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/postloader"
  },
  "scripts": {
    "build": "rm -fr ./dist && NODE_ENV=production babel ./src --out-dir ./dist --copy-files --source-maps && flow-copy-source src dist",
    "dev": "NODE_ENV=development babel ./src --out-dir ./dist --copy-files --source-maps --watch",
    "lint": "eslint ./src && flow",
    "test": "NODE_ENV=test nyc ava --verbose --serial && nyc report"
  },
  "version": "1.0.0"
}
